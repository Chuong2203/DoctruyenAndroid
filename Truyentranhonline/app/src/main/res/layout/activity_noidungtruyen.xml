<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".coltroler.noidungtruyen">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#3F51B5"
        app:titleTextColor="#FCF8F8"
        app:title="Ná»™i Dung"
        android:id="@+id/toolbarnoidung"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
<TextView
    android:layout_width="match_parent"
    android:textSize="30sp"
    android:text="ten truyen"
    android:textColor="#4CAF50"
    android:textStyle="bold"
    android:id="@+id/txttentruyen1"
    android:gravity="center"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:textColor="#4CAF50"
        android:text="loai truyen"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/txtchuong"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:text="ten truyen"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:id="@+id/txttenchuong"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5.5">
    <TextView
        android:layout_width="match_parent"
        android:text="noi dung"
        android:textColor="#FCF9F9"
        android:textSize="18sp"
        android:id="@+id/txtnoidung"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#3F51B5"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/iconpree"
            android:layout_marginRight="20sp"
            android:id="@+id/imgpree"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/iconnexxt"
            android:id="@+id/imgnext"
            android:layout_height="40dp" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>